@model IList<PlaylistViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken();


    @if (Model.Count() == 0)
    {
        <p>There are no playlists</p>
    }

    else
    {

        @foreach (var item in Model)
        {
            <p>@item.Title | @item.Duration</p>
        }
    }


}
