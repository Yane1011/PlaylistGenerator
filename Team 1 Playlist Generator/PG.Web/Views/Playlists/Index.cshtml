@model IEnumerable<PlaylistViewModel>
@{
    ViewData["Title"] = "Index";
}

@*<div class="bg-index-view">
    </div>*@
<li class="nav-item" id="createPlaylist">
    <a class="nav-link" asp-controller="Playlists" asp-action="Create">Create a Playlists</a>
</li>

@if (Model.Count() == 0)
{
    <p>There are no playlists</p>
}
else
{
    @foreach (var item in Model)
    {
        <div class="card text-white bg-dark mb-3" style="max-width: 18rem;">
            <div class="card-header">@item.Picture</div>
            <div class="card-body">
                <h5 class="card-title">@item.Duration</h5>
                <p class="card-text">@item.PlaylistsSongs.Count</p>
                <a class="nav-link" asp-controller="Playlists" asp-action="PlayPlaylist">PlayHereNow</a>
            </div>
        </div>
        @*<table class="table table-striped table-dark">
                <thead>
                    <tr>
                        <th scope="col">@item.Title</th>
                        <th scope="col">@item.Duration</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var song in item.PlaylistsSongs)
                    {
                        <tr>
                            <td>@song.Song.Title</td>
                            <td>@song.Song.Duration</td>
                            <td><a href=@song.Song.Preview>Click to play</a></td>
                        </tr>
                    }
                </tbody>
            </table>*@
    }
}



