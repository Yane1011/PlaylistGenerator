@model IList<PlaylistViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken();


    @if (Model.Count() == 0)
    {
        <p>There are no playlists</p>
    }

    else
    {
        @foreach (var item in Model)
        {

            <div class="list-group">
                @Html.ActionLink($"{item.Title} | {item.DurationInHours} | {item.Id}", "Playlist", "Playlists", new { item.Id })
            </div>
        }
    }


}
